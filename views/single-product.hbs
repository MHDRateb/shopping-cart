<div class="products">
    <h2 class="product__title">{{product.title}}</h2>
    <div class="product__price">${{product.price}}</div>
    <div class="product__rating">
        <form action="/edit-rate" method="post">
            <input name="title" type="hidden" value={{product.title}}>
            {{#each product.productRatings}}
            <input name="productRatings" type="hidden" value={{this}}>
            {{/each}}
            <select name="rates" class="selectmenu">
                <option selected="selected" disabled="disabled" class="hideoption">{{product.rating}}</option>
                 <option value="1">1</option>
                 <option value="2">2</option>
                 <option value="3">3</option>
                 <option value="4">4</option>
                 <option value="5">5</option>
            </select>
            <button class="button" type="submit">submit</button>
        </form>
    </div>
    <div class="product__reviews">{{product.commentCount}} comments</div>
    <div class="comment-area">
        <header>
            <h1 class="product__title"> comments </h1>
        </header>
        <div class="textarea">
            <textarea placeholder="Enter the comment"></textarea>
        </div>
        <div class="comment-btn">
            <button class="button"> submit </button>
        </div>
    </div>
</div>